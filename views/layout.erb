<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>LetMeThink.mx <%= @title ? " | #{@title}" : '' %></title>

    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap-v5.3.3.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/stylesheets/layout.css" rel="stylesheet">


    <!-- Highlightjs -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/atom-one-dark.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>

  </head>
  <body>
    <div class='row'>
      <div class='col-lg-2'></div>
      <div id='main-content' class='col-lg-8'>
        <nav id='navigation-bar' class="navbar navbar-expand-lg bg-dark navbar-dark">
          <div class="container-fluid">
            <a href="/" class="navbar-brand">LetMeThink.mx</a>
          </div>
        </nav>
        <div id="wrapper">
          <div class="container-fluid">
            <%= yield %>
          </div>
        </div>
      </div>
      <div class='col-lg-2'></div>
    </div>
    <script src="/javascript/jquery-3.7.1.min.js"></script>
    <script src="/javascript/bootstrap-v5.3.3.min.js"></script>

    <script>
      window.MathJax = {
        tex: {
          inlineMath: [['$','$'], ['\\(','\\)']]
        }
      };
    </script>

    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

    <script>hljs.initHighlightingOnLoad();</script>

    <script src='/javascript/tex.js'></script>
  </body>
</html>
